@addTagHelper *, CoreXF.WebApiHost

@model IEnumerable<MicroserviceModel>

@{
    this.ViewData["Title"] = "Microservices";
}

<h1 class="mt-4">@this.ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="/swagger">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <status current="@item.Status" item="@item.Name" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Authors)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <link href="lib/font-awesome/css/all.min.css" rel="stylesheet" />
}

@section Scripts {
<script>
    $(function () {
        var getItemName = function (e) {
            e.preventDefault();
            var item = e.currentTarget;
            var itemName = $(item).attr('data-item-name');
            return itemName;
        }

        $('.play').on('click', function (e) {
            $.post('microservices/play', { item: getItemName(e) }, function (data) {
                window.location.reload(false);
            });
        });
        $('.pause').on('click', function (e) {
            $.post('microservices/pause', { item: getItemName(e) }, function (data) {
                window.location.reload(false);
            });
        });
    });
</script>
}